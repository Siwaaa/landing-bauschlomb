/* @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400;500;700&display=swap'); */

html {
  font-family: 'Montserrat', sans-serif;
  background-color: var(--color-white);
  color: var(--color-black);
  font-size: var(--fz);
}
.container {
  width: 100%;
  max-width: var(--content-width);
  margin-right: auto;
  margin-left: auto;
  padding-left: var(--container-padding-w);
  padding-right: var(--container-padding-w);

  & > a {
    color: #0FB1BF;
  }
}
.sub {
  vertical-align: super;
  font-size: .7em;
  margin-right: 2px;
  margin-left: 2px;

  h1 &{
    font-size: .5em;
  }
}
:root {
  /* color */
  --color-white: #ffffff;
  --color-black: #3F3F3F;
  --color-blue: #0FB1BF;
  /* font  */
  --fz-h1: 52px;
  --fz-h3: 33px;
  --fz: 23px;
  --fz-btn: 20px;
  --fz-btn-small: 14px;
  /* content */
  --content-width: 1500px;
  --container-padding-h: 60px;
  --container-padding-w: 30px;
  --nav-h: 100px;
  --med-h: 45px;

  @media (--2xl) {
    --fz-h1: 44px;
    --fz-h3: 28px;
    --fz: 20px;
    --fz-btn: 16px;
    --fz-btn-small: 13px;
    --nav-h: 70px;
  }
  @media (--650h) {
    --fz-h1: 48px;
    --fz: 18px;
    --fz-btn-small: 11px;
    --nav-h: 60px;
  }
  @media (--xl) {
    --fz-h1: 38px;
    --fz: 18px;
  }
  @media (--lg) {
    --fz-h3: 25px;
    --nav-h: 62px;
  }
  @media (--md) {
    --container-padding-h: 40px;
    --container-padding-w: 20px;
    --fz-btn-small: 11px;
  }
  @media (--sm) {
    --fz-h1: 30px;
    --fz-h3: 23px;
    --fz: 16px;
    --fz-btn: 14px;
    --nav-h: 50px;
    --med-h: 60px;
    --container-padding-w: 15px;
  }
  @media (--xs) {
    --fz-h1: 23px;
    --fz-h3: 21px;
    --fz: 12px;
    --fz-btn: 12px;
    --fz-btn-small: 9px;
    --med-h: 96px;
  }
}